    android:background="@color/colorWhite"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="50dp"
        android:id="@+id/image_icon"
        android:tint="@color/colorBlue"
